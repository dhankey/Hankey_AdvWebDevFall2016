    script(type="text/javascript").
        window.onload = function() 
        {
          var button = document.querySelector(".enter");
          button.onclick = function()
          {
            var controlls = document.querySelector(".form-control");
            var msg = false;
            alert("length: " + controlls.length);
            for(var i = 0; i < controlls.length; i++)
            {
                
                if(controlls[i].value == "")
                    msg = true;
            }
            if(msg == true)
            {
                document.querySelector("h2").innerHTML = "Please fill out all information.";
                document.querySelector(".form-horizontal").action = "/cancel";
            }
          }   
        };
